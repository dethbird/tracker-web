{% extends 'layout.html.twig' %}

{% block title %}{{parent()}} / activity type / list{% endblock %}

 {% block opengraph_meta %}
  		{{parent()}}
		<meta property="og:title" content="RishiSatsangi.com  / Art / {{data.name}}">
		<meta property="og:description" content="{{data.description|striptags}}">
  {% endblock %} 

{% block body %}
	{{ parent() }}
    <div class="clearfix"></div>

<!-- <pre>
{{report|print_r}}
</pre> -->
		<h1>Report by Day</h1>


		{% for key, day in report.days %}
		
			<div class="panel panel-default">
				<div class="panel-body">
			 		<h3><span class="glyphicon glyphicon-calendar"></span> {{key|date_format("l F j, Y")}}</h3>
				</div>
			</div>
			<div class="row" >
				 <table class="table table-striped table-condensed table-hover">
				 	<thead>
			        <tr>
			          <th><span class="glyphicon glyphicon-tag"></span> <!-- Type --></th>
			          <th><span class="glyphicon glyphicon-time"></span> <!-- Time --></th>
			          <th><span class="glyphicon glyphicon-comment"></span> <!-- Note --></th>
			          <th>qty</th>
			          <th>&nbsp;</th>
			        </tr>
			      </thead>
			      <tbody>
					 {% for log in day.logs %}
				      	<tr>
							 <td class="name">
							 	{{log.activity_type_id|activity_name_label(report.activity_types, log.has_goal)|raw}}
							 </td> 
							 <td class="time">
							 	 <small>{{log.date_added.date|date_format("g:i a")}}</small>
							 </td>
							 <td class="note">
					 			<!-- <pre>{{log.json_decoded|print_r}}</pre> -->
						 		{% if log.name=="Flickr" %}
						 			<a href="{{log.json_decoded.photo.urls.url}}" target="_blank"><img src="https://farm{{log.json_decoded.photo.attributes.farm}}.staticflickr.com/{{log.json_decoded.photo.attributes.server}}/{{log.json_decoded.photo.attributes.id}}_{{log.json_decoded.photo.attributes.secret}}_m.jpg" class="img-thumbnail"/></a>
						 			<br />
						 			{{log.json_decoded.photo.title}}<br />
						 			{% for tag in log.json_decoded.photo.tags.tag %} #{{tag}}{% endfor %}
						 			<br />
						 			<small><a href="https://www.flickr.com/photos/{{log.json_decoded.photo.owner.attributes.path_alias}}" target="_blank">@{{log.json_decoded.photo.owner.attributes.path_alias}}</a></small>
						 			<!-- <pre>{{log.json_decoded|print_r}}</pre> -->
						 		{% elseif log.name=="Instagram" %}
						 			<!-- <pre>{{log.json_decoded|print_r}}</pre> -->
						 			<a href="{{log.json_decoded.link}}" target="_blank"><img src="{{log.json_decoded.images.thumbnail.url}}" class="img-thumbnail" /></a>
						 			<br />
						 			{{log.json_decoded.caption.text}}
						 			<br />
						 			{% for tag in log.json_decoded.tags %} #{{tag}}{% endfor %}
						 			<br />
						 			<small><a href="http://instagram.com/{{log.json_decoded.user.username}}" target="_blank">@{{log.json_decoded.user.username}}</a></small>
						 		{% elseif log.name=="Foursquare" %}
						 			<!-- <pre>{{log.json_decoded|print_r}}</pre> -->
						 			<img src="http://maps.googleapis.com/maps/api/staticmap?center={% for addr in log.json_decoded.checkin.venue.location.formattedAddress %}{{addr}}{% endfor %}&zoom=15&size=200x150&maptype=roadmap
&markers=color:red%7Clabel:A%7C{{log.json_decoded.checkin.venue.location.lat}},{{log.json_decoded.checkin.venue.location.lng}}" />
									<br />
						 			<a href="https://foursquare.com/v/{{log.json_decoded.checkin.venue.id}}" target="_blank">{{log.json_decoded.checkin.venue.name}}</a><br />
						 			{% for addr in log.json_decoded.checkin.venue.location.formattedAddress %}
						 				<small>{{addr}}</small><br />
						 			{% endfor %}
						 			<br />
						 			<small><a href="https://foursquare.com/u/{{log.json_decoded.checkin.user.id}}" target="_blank">@{{log.json_decoded.checkin.user.firstName}} {{log.json_decoded.checkin.user.lastName}}</a></small>
						 		{% elseif log.name=="Github" %}
						 			<strong>Repo:</strong><br />
						 			<a href="{{log.json_decoded.repository.url}}" target="_blank">{{log.json_decoded.repository.name}}</a>
						 			<br />
						 			<strong>Commits:</strong><br />
						 			<blockquote>
						 			{% for commit in log.json_decoded.commits %}
						 				<a href="{{commit.url}}" target="_blank">{{commit.message}}</a><br />
						 				{%if commit.modified|length > 0 %}
						 				Modified:
						 				<ul>
						 					{% for file in commit.modified %}
						 						<li>/{{file}}</li>
						 					{% endfor %}
						 				</ul>
						 				{%endif%}


						 			{% endfor %}
						 			</blockquote>
						 			<!-- <textarea>{{log|print_r}}</textarea> -->
						 		{% endif %}
						 		<br />
					 			<small>{{log.note}}</small>
							 </td>
							 <td class="quantity">
							 	<span class="badge">{{log.quantity}}</span>
							 </td>
							 <td class="action">
							 	  <button type="button" class="btn btn-info btn-xs edit" data-id="{{log.id}}"><!-- <span class="glyphicon glyphicon-pencil"></span> -->edit</button>
							 	  <button type="button" class="btn btn-default btn-xs remove" data-id="{{log.id}}"><!-- <span class="glyphicon glyphicon-remove"></span> -->remove</button>
							 </td>
						</tr>
					 {% endfor %}
			 	   <tbody>
				</table>


				<h4>Daily Goals</h4>
				      	<div class="container">
					 {% for goal in day.goals.day %}
							 {{goal.activity_type_id|activity_name_label(report.activity_types)|raw}} 
							 {% if goal.operator=="<" %}<span class="glyphicon glyphicon-chevron-left"></span>{% elseif goal.operator=="=" %}<span class="glyphicon glyphicon-play"></span>{% elseif goal.operator==">" %}<span class="glyphicon glyphicon-chevron-right"></span>{% endif %} <strong>{{goal.occurrence}}</strong> / <strong>{{goal.timeframe}}</strong>
							 <!-- <strong>{{goal.operator}}</strong> {{goal.occurrence}} / {{goal.day}} | {{goal.occurrence_count}} -->

							 <span
								{% if (goal.operator=="<") %}{% if (goal.occurrence_count > goal.occurrence) %}class="label label-danger"{% endif %}{% endif %}
								{% if (goal.operator=="<") %}{% if (goal.occurrence_count < goal.occurrence) %}class="label label-success"{% endif %}{% endif %}
								{% if (goal.operator==">") %}{% if (goal.occurrence_count > goal.occurrence) %}class="label label-success"{% endif %}{% endif %}
								{% if (goal.operator=="=") %}{% if (goal.occurrence_count >= goal.occurrence) %}class="label label-success"{% endif %}{% endif %}
								>
								{{goal.occurrence_count}}
							</span>
							 <br />
					 {% endfor %}
						</div>

				<h4>Weekly Goals</h4>
				      	<div class="container">
					 {% for goal in day.goals.week %}
							 {{goal.activity_type_id|activity_name_label(report.activity_types)|raw}} 
							 {% if goal.operator=="<" %}<span class="glyphicon glyphicon-chevron-left"></span>{% elseif goal.operator=="=" %}<span class="glyphicon glyphicon-play"></span>{% elseif goal.operator==">" %}<span class="glyphicon glyphicon-chevron-right"></span>{% endif %} <strong>{{goal.occurrence}}</strong> / <strong>{{goal.timeframe}}</strong>

							 <span
								{% if (goal.operator=="<") %}{% if (goal.occurrence_count > goal.occurrence) %}class="label label-danger"{% endif %}{% endif %}
								{% if (goal.operator=="<") %}{% if (goal.occurrence_count < goal.occurrence) %}class="label label-success"{% endif %}{% endif %}
								{% if (goal.operator==">") %}{% if (goal.occurrence_count > goal.occurrence) %}class="label label-success"{% endif %}{% endif %}
								{% if (goal.operator=="=") %}{% if (goal.occurrence_count >= goal.occurrence) %}class="label label-success"{% endif %}{% endif %}
								>
								{{goal.occurrence_count}}
							</span>
							 <br />
					 {% endfor %}
						</div>

				<!-- <h5>Occurrence</h5>
				      	<div class="container">
					 {% for key,log in day.occurrence %}
							 {{key|activity_name_label(report.activity_types)|raw}} <span class="badge">{{log}}</span>
							 <br />
					 {% endfor %}
						</div>


				<h5>Quantity</h5>
				      	<div class="container">
					 {% for key,log in day.quantity %}
							 {{key|activity_name_label(report.activity_types)|raw}} <span class="badge">{{log}}</span>
							 <br />
					 {% endfor %}
						</div>		


				<h5>Polarity</h5>
				      	<div class="container">
					 {% for key,log in day.polarity %}
							 <span class="label label-{%if key=="good" %}success{%else%}danger{%endif%}">{{key}}</span> <span class="badge">{{log}}</span>
							 <br />
					 {% endfor %}
						</div>				 -->
			</div>
			<hr />
			<br /><br />
		{% endfor %}

		<div class="panel panel-default">
			<div class="panel-body">
				<strong>Summary</strong><br />
				{{report.date_range.start_date.date|date_format("l F j, Y")}} - {{report.date_range.end_date.date|date_format("l F j, Y")}}
				<br />
				<table class="table table-striped table-condensed table-hover">
				 	<thead>
			        <tr>
			          <th>&nbsp</th>
			          <th>Quantity</th>
			          <th>Occurrence</th>
			        </tr>
			      </thead>
			      <tbody>
					{% for key, type in report.activity_types %}
						
						<tr>
							 <td>
							 	 <small>{{key|activity_name_label(report.activity_types)|raw}}</small>
							 </td>
							 <td>
							 	<span class="badge">{{type.quantity}}</span>
							 </td>
							 <td>
							 	{{type.occurrence}}
							 </td>
						</tr>
					{% endfor %}
			 	   <tbody>
				</table>
				{% for polarity,count in report.polarity %}
						 <span class="label label-{%if polarity=="good" %}success{%else%}danger{%endif%}">{{polarity}}</span> <span class="badge">{{count}}</span>
						 <br />
				 {% endfor %}
			</div>
		</div>

		<script>
			$(document).ready(function(){
				$('.remove').click(function(){
					var del = confirm("Really delete this activity?");
					if(del===true){
						$('#delete_activity_form #id').val($(this).attr('data-id'));
						$('#delete_activity_form').submit();
					}
				});

				$('.edit').click(function(){
					document.location = "/activity/" + $(this).attr('data-id');
				});
				$('.note').each(function(){
					// var hashtags = /\#\w+/g.exec( $(this).html());
					var that = $(this);
					// $(hashtags).each(function(i,h){
					// 	console.log(h);
					// 	that.html(
					// 		that.html().replace(h, "<strong>" + h + "</strong>")
					// 	);
					// });
					var hashtag_regexp = /#([a-zA-Z0-9]+)/g;
					that.html(
						that.html().replace(
					        hashtag_regexp,
					        '<a class="hashtag" target="_blank">#$1</a>'
				        )
				    );

				
				});
				// /#\w+/g
			});
		</script>
		<form action="/activity/delete" method="post" id="delete_activity_form" name="delete_activity_form">
			<input type="hidden" name="id" id="id" />
		</form>
{% endblock %}